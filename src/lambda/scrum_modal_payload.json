{
  "type": "modal",
  "callback_id": "scrum-modal",
  "submit": {
    "type": "plain_text",
    "text": "Submit"
  },
  "close": {
    "type": "plain_text",
    "text": "Cancel"
  },
  "title": {
    "type": "plain_text",
    "text": "Today's Scrum!"
  },
  "blocks": [
    {
      "type": "section",
      "text": {
        "type": "plain_text",
        "text": ":wave: Hey David!\n\nWe'd love to hear from you how do you feel today and so on."
      }
    },
    {
      "type": "divider"
    },
    {
      "type": "input",
      "element": {
        "type": "radio_buttons",
        "options": [
          {
            "text": {
              "type": "plain_text",
              "text": "awful :exploding_head:"
            },
            "value": "value-0"
          },
          {
            "text": {
              "type": "plain_text",
              "text": "bad :pensive:"
            },
            "value": "value-1"
          },
          {
            "text": {
              "type": "plain_text",
              "text": "so-so :neutral_face:"
            },
            "value": "value-2"
          },
          {
            "text": {
              "type": "plain_text",
              "text": "good :blush:"
            },
            "value": "value-3"
          },
          {
            "text": {
              "type": "plain_text",
              "text": "awesome :star-struck:"
            },
            "value": "value-4"
          }
        ],
        "action_id": "checkboxes-action"
      },
      "label": {
        "type": "plain_text",
        "text": "1. How is your condition today?"
      }
    },
    {
      "type": "input",
      "element": {
        "type": "plain_text_input",
        "multiline": true,
        "action_id": "plain_text_input-action"
      },
      "label": {
        "type": "plain_text",
        "text": "2. What did you do since yesterday?"
      }
    },
    {
      "type": "input",
      "element": {
        "type": "plain_text_input",
        "multiline": true,
        "action_id": "plain_text_input-action"
      },
      "label": {
        "type": "plain_text",
        "text": "3. What do you plan to do today?"
      }
    },
    {
      "type": "input",
      "element": {
        "type": "plain_text_input",
        "multiline": true,
        "action_id": "plain_text_input-action"
      },
      "label": {
        "type": "plain_text",
        "text": "4. Anything blocking your progress?"
      }
    }
  ]
}
